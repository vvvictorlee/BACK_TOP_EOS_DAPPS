{
  // https://gist.github.com/cletusw/e01a85e399ab563b1236

  "plugins": ["node"],
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "env": {
      "browser": false,
      "node": true
  },
  "globals": {
      "document": true,
      "__dirname": true,
      "import": true,
      "require": true,
      "module":  true
  },
  "rules": {
      "comma-dangle": 0,
      "no-cond-assign": 0,
      "semi": 0,
      "no-console": 0,
      "indent": 0,
      "no-tabs": 0,
      "max-len": ["error", 120],
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "class-methods-use-this": 0,
      "import/prefer-default-export": 0
  }
}
